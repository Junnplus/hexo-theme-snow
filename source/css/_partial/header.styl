#header
  background-color: #3fb0e7
  color: #333
  display: table
  height: 100%
  text-align: center
  width: 100%
  transition: height 0.25s
  position: relative
  overflow: hidden
  &:before, &:after
    content: ""
    position: absolute
    left: 0
    right: 0
    height: 40px
  &:before
    top: 0
  &:after
    bottom: 0
  &.small
    height:10%
    background-color: #fff
    #header-outer
    #header-inner
      border-bottom: 1px solid #ddd
      &.active
        border-bottom: 1px solid rgb(63, 176, 231)
      .title
        opacity: 1

#header-inner
  position: fixed
  text-align: center
  width: 100%
  height: 50px
  background:#fff
  transition: opacity 0.25s
  z-index: 99999
  top: 0
  .title
    font-weight: bold
    padding-top:20px
    opacity: 0
    @media mq-mobile
      opacity: 1
    h1
      display: none
      font-size: 1rem
      line-height: 3rem
      @media mq-mobile
        color: #fff
  &.active
    border-bottom: 1px solid rgb(63, 176, 231);
    .title
      opacity: 1
  .avatar
    padding-top:28px
    img
      border-radius:50px
      width:42px
      -webkit-transition:2s
      &:hover
        -webkit-transform: rotate(360deg)
        -o-transform: rotate(360deg)
        -moz-transform: rotate(360deg)
        transform: rotate(360deg)
        
#header-outer
  min-height:150px
  height: 100%
  position: relative
  margin-top: 40px

#banner
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-size: cover
  z-index: -1

#header-title
  text-align: center
  height: logo-size
  position: absolute
  top: 50%
  left: 0
  margin-top: logo-size * -0.5

$logo-text
  text-decoration: none
  color: #fff
  font-weight: 300

#logo
  @extend $logo-text
  font-size: logo-size
  line-height: logo-size
  letter-spacing: 2px
  font-weight: bold;

#subtitle
  @extend $logo-text
  font-size: subtitle-size
  line-height: subtitle-size
  letter-spacing: 1px

#logo-wrap
  font-size:1000

#subtitle-wrap
  margin-top: subtitle-size

#main-nav
  position: absolute
  top: 0

.site-nav
  padding: 0px 1rem 0 1rem
  position: fixed
  top: 48px
  left: 0
  width: 26%
  z-index: 999
  text-align: left;
  display:none
  &.nav-on
    display:block
  ul
    list-style: none
    padding: .5rem 0
    margin: 0
    li
      padding: .5rem 0
      align: left
      a
        color: #999
        text-decoration: none
        transition: color 0.3s

$nav-link
  float: left
  color: #333
  opacity: 0.6
  text-decoration: none
  transition: opacity 0.2s
  display: block
  padding: 20px 15px
  &:hover
    opacity: 1

.nav-icon
  @extend $nav-link
  font-family: font-icon
  text-align: center
  width: font-size
  height: font-size
  padding: 20px 15px
  position: relative
  cursor: pointer
  color: #2E3434


.main-nav-link
  @extend $nav-link
  font-weight: 300
  letter-spacing: 1px
  @media mq-mobile
    display: none

.nav-toggle
  font-family: FontAwesome
  &:before
    content: "\f0c9"

#main-nav-toggle
  display: block
  &:before
    content: "\f0c9"

#sub-profile
  position: absolute
  top: 12px
  width: 30px
  height: 30px
  right: 15px
  border:1px solid #ddd
  img
    width:30px
    height:30px

#sub-nav
  position: absolute
  top: 0
  right:0px

#rss-wrap
 width:100px
 margin: 0 auto

#nav-rss-link
  font-size:24px
  &:before
    content: "\f09e"

#nav-github-link
  font-size:24px
  &:before
    content: "\f09b"

#nav-archives-link
  font-size:24px
  &:before
