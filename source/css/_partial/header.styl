.fa
  display: inline-block;
  font: normal normal normal 14px/1 FontAwesome;
  font-size: inherit;
  text-rendering: auto;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  transform: translate(0, 0);

.fa-github:before
  content: "\f09b";

.fa-linux:before
  content: "\f17c";

.fa-home:before
  content: "\f015";

.fa-rss:before
  content: "\f09e";

.fa-lg
  font-size: 1.33333333em;
  line-height: 0.75em;
  vertical-align: -15%;

.fa-2x
  font-size: 24px;

.fa-3x
  font-size: 3em;

.fa-4x
  font-size: 4em;

.fa-5x
  font-size: 5em;

#search-form-wrap
  position: absolute
  top: 15px
  width: 150px
  height: 30px
  right: -150px
  opacity: 0
  transition: 0.2s ease-out
  &.on
    opacity: 1
    right: 50px
  @media mq-mobile
    width: 80%
    right: -100%

.search-form
  position: absolute
  top: 0
  left: 0
  right: 0
  background: #fff
  padding: 5px 15px
  border-radius: 15px
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.3)

.search-form-input
  border: none
  background: none
  color: color-default
  width: 100%
  font: 13px font-sans
  outline: none
  &::-webkit-search-results-decoration
  &::-webkit-search-cancel-button
    -webkit-appearance: none

.search-form-submit
  position: absolute
  top: 50%
  right: 10px
  margin-top: -7px
  font: 13px font-icon
  border: none
  background: none
  color: #bbb
  cursor: pointer
  &:hover, &:focus
    color: #777

.mountains
  position: absolute
  bottom: -120px
  right: 0px
  @media mq-mobile
    display: none

$cloud
  background-image: url("/css/images/cloud.png")
  background-size: cover
  position: absolute

$sun
  background-image: url("/css/images/sun.png")
  background-size: cover
  position: absolute
  animation: 10s sun infinite linear

#cloud-1
  @extend $cloud
  width:80px
  height:70px
  bottom:300px
  right:-200px
  animation: 10s cloud-right infinite linear

#cloud-2
  @extend $cloud
  width:80px
  height:70px
  bottom:200px
  right:-200px
  animation: 5s cloud-right infinite linear

#cloud-3
  @extend $cloud
  width:80px
  height:70px
  bottom:400px
  left:-200px
  animation: 10s cloud-left infinite linear

#cloud-4
  @extend $cloud
  width:80px
  height:80px
  bottom:100px
  animation: 5s cloud-middle infinite ease-in-out alternate

.cloud
  @media mq-mobile
    display:none

#sun
  @extend $sun
  width:80px
  height:80px
  top: 10px
  left: 50px
  z-index: 100000

@keyframes cloud-middle
  from{
    right: 200px
  }
  to {
    right: 800px
  }

@keyframes cloud-left
  from{
    opacity: 0
    left: -100px
  }
  to {
    opacity: 1
    left: 1800px
  }

@keyframes cloud-right
  from{
    opacity: 0
    right: -100px
  }
  to {
    opacity: 1
    right: 1800px
  }

$keyframe-name-2 = sun
@keyframes {$keyframe-name-2}
  to {
    transform: rotate(1turn);
  }
