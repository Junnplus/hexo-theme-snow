#nav-weibo-link
  font-size:24px
  &:before
    content: "\f18a"

#nav-twitter-link
  font-size:24px
  &:before
    content: "\f099"

#nav-facebook-link
  font-size:24px
  &:before
    content: "\f09a"

#nav-google-plus-link
  font-size:24px
  &:before
